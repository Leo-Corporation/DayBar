<Page x:Class="DayBar.Pages.NotificationsPage"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	  xmlns:local="clr-namespace:DayBar.Pages"
	  xmlns:lang="clr-namespace:DayBar.Properties"
	  mc:Ignorable="d" FontFamily="..\Fonts\#Hauora" Foreground="{DynamicResource Foreground1}"
	  d:DesignHeight="450" d:DesignWidth="800" d:Background="#fff"
	  Title="NotificationsPage">

	<StackPanel>
		<TextBlock Margin="5 10" Text="{x:Static lang:Resources.Notifications}" FontWeight="Bold" FontSize="14"/>
        <CheckBox Margin="5 0" x:Name="NotifyUpdatesChk" Content="{x:Static lang:Resources.NotifyUpdates}" Style="{DynamicResource CheckBoxStyle1}" Checked="NotifyUpdatesChk_Checked" Unchecked="NotifyUpdatesChk_Checked"/>
        <CheckBox Margin="5 0" x:Name="NotifyHalfChk" Content="{x:Static lang:Resources.NotifyHalf}" Style="{DynamicResource CheckBoxStyle1}" Checked="NotifyHalfChk_Checked" Unchecked="NotifyHalfChk_Checked"/>
	</StackPanel>
</Page>
